<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comp3350.srsys.RequestBooksActivity" >

    <TextView
        android:id="@+id/requestTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="@string/request_prompt"
        android:textSize="0.25in" />

    <EditText
        android:id="@+id/bookNameTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requestTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:hint="@string/book_name_text_field" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/authorTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookNameTextField"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/author_text_field" />

    <EditText
        android:id="@+id/courseTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authorTextField"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/book_course_text_field" />

    <EditText
        android:id="@+id/categoryTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courseTextField"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/book_category_text_field" />

    <EditText
        android:id="@+id/quantityTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoryTextField"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/quantity_text_field" />

    <Button
        android:id="@+id/submitRequestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantityTextField"
        android:layout_centerHorizontal="true"
        android:text="@string/submit_request_button" />

</RelativeLayout>
